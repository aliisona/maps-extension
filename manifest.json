{
  "manifest_version": 3,
  "name": "Google Maps Walking Path Overlay",
  "version": "1.0",
  "description": "Overlay walking paths on Google Maps.",
  "permissions": [
    "geolocation",
    "storage",
    "activeTab",
    "scripting"
    ],
    "host_permissions": [
    "http://127.0.0.1:5000/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.google.com/maps/*"],
      "js": ["content.js"]
    }
  ]
}